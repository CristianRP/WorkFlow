<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gruporosul.workflow" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".volley.AppController"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme" >

        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.AgrupadorActivity"
            android:label="@string/title_activity_agrupador"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:name=".activity.FlujosActivity"
            android:label="@string/title_activity_flujos"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.ProgresoFlujoActivity"
            android:label="@string/title_activity_progreso_flujo"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.FlowDetailActivity"
            android:label="@string/title_activity_flow_detail"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
